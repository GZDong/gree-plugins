<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- 插件唯一标识，不可更改 -->
    <id>com.gree.greeg</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>GreeGeneration</name>

    <!-- 插件名称和供应商信息 -->
    <vendor email="A80788@gree.com.cn" url="https://www.gree.com">Gree</vendor>

    <!-- 插件描述 -->
    <description><![CDATA[
    一款用于快速构建相关模板类的插件，力求提升开发效率，减少冗余工作；由GZD创建和维护，有问题请内邮A80788.
    <br>
    <em>1.4版本：支持Compose版的快速构建</em>
  ]]></description>

    <!-- 依赖声明 -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>

    <!-- 扩展点定义 -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- 配置界面 -->
        <applicationConfigurable instance="com.gree.greeg.ui.GenDialog"/>
        <!-- 内部文件模板 -->
        <internalFileTemplate name="TempActivity"/>
        <internalFileTemplate name="TempViewModel"/>
        <internalFileTemplate name="TempXml"/>
    </extensions>
    <!-- 动作定义 -->
    <actions>
        <action id="GreePlugin1" class="com.gree.greeg.GenerateAction" text="GreeGeneration"
                icon="AllIcons.Actions.AddFile"
                description="自动生成基于MVVM模式下的Activity、ViewModel、Model、xml等的创建工作">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>